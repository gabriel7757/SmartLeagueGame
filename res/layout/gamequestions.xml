<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="12dp"        
        android:layout_marginRight="9dp"
        style="@style/CodeFont"
        android:text="countdown-timer" />

    

    <Button
        android:id="@+id/titlequestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:background="@drawable/buttonshapetitle"               
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"        
        android:text="Which is the largest country of the world sdfasd dfds seres sssdd ollo? " />
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingTop="40dp" >

        <Button
            android:id="@+id/option1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:shadowColor="#2E1021"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="Spain"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/option2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:shadowColor="#2E1021"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="France"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/option3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:shadowColor="#2E1021"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="Russia"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/option4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:shadowColor="#2E1021"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="USA"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>